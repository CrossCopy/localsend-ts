{
	"name": "localsend",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"version": "0.1.1",
	"type": "module",
	"repository": "https://github.com/CrossCopy/localsend-ts.git",
	"bin": {
		"localsend": "./dist/cli.js",
		"localsend-interactive": "./dist/cli-interactive.js"
	},
	"scripts": {
		"build": "bun build.ts",
		"postbuild": "verify-package-export verify",
		"check-types": "tsc --noEmit",
		"dev": "bun run --watch dev.ts",
		"format": "prettier --write .",
		"cli": "bun src/cli-interactive.ts",
		"cli:dev": "bun --watch src/cli-interactive.ts",
		"tui": "bun src/cli-tui.tsx",
		"tui:dev": "bun --watch src/cli-tui.tsx"
	},
	"exports": {
		".": "./src/index.ts",
		"./types": "./src/types.ts",
		"./sdk": "./src/sdk/index.ts",
		"./sdk/client": "./src/sdk/client.gen.ts"
	},
	"devDependencies": {
		"@changesets/cli": "^2.28.1",
		"@hey-api/openapi-ts": "^0.64.15",
		"@types/bun": "latest",
		"@types/react": "^19.1.12",
		"citty": "^0.1.6",
		"prettier": "^3.5.3",
		"verify-package-export": "^0.0.3"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@hey-api/client-fetch": "^0.13.1",
		"@hono/node-server": "^1.19.2",
		"@hono/standard-validator": "^0.1.5",
		"@hono/valibot-validator": "^0.5.3",
		"@scalar/hono-api-reference": "^0.9.18",
		"@types/cli-progress": "^3.11.6",
		"@valibot/to-json-schema": "^1.0.0",
		"cli-progress": "^3.12.0",
		"hono": "^4.9.6",
		"hono-openapi": "^1.0.4",
		"ink": "^6.3.0",
		"pretty-bytes": "^7.0.1",
		"react": "^19.1.1",
		"undici": "^7.18.2",
		"valibot": "^1.0.0"
	},
	"files": [
		"dist"
	]
}
